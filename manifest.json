{
  "name": "__MSG_appName__",
  "short_name": "__MSG_shortAppName__",
  "description": "__MSG_appDescription__",
  "manifest_version": 2,
  "version": "0.8",
  "default_locale": "en",
  "app": {
    "background": {
      "scripts": ["js/background.js"]
    }
  },
  "permissions": [
    "app.window", 
    "storage", 
    {"socket":["tcp-connect:*:*"]}
  ],
  "sandbox": {
    "pages": ["html/image.html"]
  },
  "icons": { "16": "image/img16.png", "128": "image/img128.png" }
}
